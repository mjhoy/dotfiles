#!/bin/bash
#
# This script checks out the latest nixpkgs and attempts to build my
# developer environment against it. If all goes well, it will push an
# update to the mjh-mbp branch.

set -eoux pipefail

echo "Building devEnv"
nix-build --no-link --show-trace -A devEnv '<nixpkgs>'

echo "Building nix"
nix-build --no-link -A nix '<nixpkgs>'

echo "Installing"
nix-env -A nixpkgs -i devEnv
nix-env -A nixpkgs -i nix
