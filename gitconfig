[user]
  name = Michael Hoy
  email = mjh@mjhoy.com

[init]
  defaultBranch = main

[alias]
  s   = status -sb
  b   = branch
  ci  = commit
  co  = checkout
  di  = diff --color-words
  dc  = diff --color-words --cached
  cob = checkout -b
  aa  = add --all
  amend-head = commit --amend -C HEAD
  l   = log --pretty=format:'%h %s'
  ld  = log --date=short --pretty=format:'%h %cd %s'
  lg  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[color]
  diff = auto
  status = auto
  branch = auto

[core]
  excludesfile = "~/.dotfiles/gitignore"
  editor = vi
[url "http://github.com/ghc/packages-"]
	insteadOf = http://github.com/ghc/packages/
[url "https://github.com/ghc/packages-"]
	insteadOf = https://github.com/ghc/packages/
[url "ssh://git@github.com/ghc/packages-"]
	insteadOf = ssh://git@github.com/ghc/packages/
[url "git@github.com:ghc/packages-"]
	insteadOf = git@github.com:ghc/packages/
[magit]
	hideCampaign = true
